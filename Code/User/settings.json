{
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "workbench.colorTheme": "Monochrome (GitHub Edition)",
    "explorer.confirmDelete": false,
    "cmake.configureOnOpen": false,
    "workbench.iconTheme": "material-icon-theme",
    "editor.tokenColorCustomizations": {
        "comments": "#0eb129",
        "textMateRules": [
            {
                "scope": "keyword",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#b69827"
                }
            },
            {
                "scope": "storage",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#b69827"
                }
            },
            {
                "scope": "constant.language",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#b69827"
                }
            },
            {
                "scope": "support.class.builtin",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#b69827"
                }
            },
            {
                "scope": "support.type",
                "settings": {
                    "fontStyle": "bold",
                }
            },
        ]
    },
    "workbench.startupEditor": "none",
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.cppStandard": "c++20",
    "files.associations": {
        "*.nava": "java"
    },
    "git.ignoredRepositories": [
        "/home/marco/.vscode/extensions/stepsize.stepsize-0.65.0/resources/demo-repository"
    ],
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "fixme"
    ],
    "java.inlayHints.parameterNames.enabled": "none",
}
